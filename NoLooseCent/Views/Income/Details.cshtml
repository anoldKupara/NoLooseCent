@model NoLooseCent.Models.Income
@{
    ViewData["Title"] = "Income Details";
}

<h2>Income Details</h2>

<dl class="row">
    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>

    <dt class="col-sm-2">Source</dt>
    <dd class="col-sm-10">@Model.Source</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.DateReceived.ToShortDateString()</dd>

    <dt class="col-sm-2">Currency</dt>
    <dd class="col-sm-10">@Model.Currency?.Name</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>