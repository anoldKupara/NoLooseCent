@model NoLooseCent.Models.Income
@{
    ViewData["Title"] = "Delete Income";
}

<div class="container-fluid stay-interview-details">
    <!-- Header -->
    <div class="header-section text-center mb-5">
        <h1 class="display-5 fw-bold text-danger">Delete Income</h1>
        <p class="lead text-muted">You’re about to permanently remove this record</p>
        <hr class="border-danger border-2 opacity-50 w-50 mx-auto">
    </div>

    <!-- Delete Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4">
                <div class="custom-gradient-header-delete py-3 px-4 text-white rounded-top">
                    <h2 class="h5 mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h2>
                </div>

                <div class="card-body px-4 py-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Are you sure you want to delete this income record?</strong>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Amount</dt>
                        <dd class="col-sm-8 text-primary fw-bold">@Model.Amount.ToString("C")</dd>

                        <dt class="col-sm-4 text-muted">Source</dt>
                        <dd class="col-sm-8">@Model.Source</dd>

                        <dt class="col-sm-4 text-muted">Date Received</dt>
                        <dd class="col-sm-8">@Model.DateReceived.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Currency</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary px-3 py-2 rounded-pill">@Model.Currency?.Name</span>
                        </dd>
                    </dl>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between px-4 py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fas fa-arrow-left me-1"></i> Cancel
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="fas fa-trash-alt me-1"></i> Yes, Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-gradient-header-delete {
            background: linear-gradient(to right, #ef4444, #f87171);
            font-weight: 600;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        dt {
            font-weight: 600;
        }

        dd {
            margin-bottom: 1rem;
        }
    </style>
}