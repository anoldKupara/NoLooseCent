@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container-fluid stay-interview-details">
    <!-- Header -->
    <div class="header-section text-center mb-5">
        <h1 class="display-5 fw-bold text-danger">Delete Expense</h1>
        <p class="lead text-muted">You're about to permanently remove this record</p>
        <hr class="border-danger border-2 opacity-50 w-50 mx-auto">
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4">
                <!-- Header -->
                <div class="bg-danger text-white py-3 px-4 rounded-top fw-semibold">
                    <i class="fas fa-triangle-exclamation me-2"></i> Confirm Deletion
                </div>

                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Are you sure you want to delete this expense record?
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Amount</dt>
                        <dd class="col-sm-8 text-primary fw-semibold">US$@Model.Amount</dd>

                        <dt class="col-sm-4 text-muted">Purpose</dt>
                        <dd class="col-sm-8">@Model.Purpose</dd>

                        <dt class="col-sm-4 text-muted">Date Spent</dt>
                        <dd class="col-sm-8">@Model.DateSpent.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Currency</dt>
                        <dd class="col-sm-8">
                            <span class="badge rounded-pill bg-secondary">@Model.Currency?.Name</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash me-1"></i> Yes, Delete
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-danger {
            background: linear-gradient(to right, #dc2626, #ef4444);
        }

        .form-label {
            font-weight: 500;
        }

        .badge {
            font-size: 0.9rem;
        }
    </style>
}