@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Delete Expense";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning">Are you sure you want to delete this expense?</div>

<dl class="row">
    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>

    <dt class="col-sm-2">Purpose</dt>
    <dd class="col-sm-10">@Model.Purpose</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.DateSpent.ToShortDateString()</dd>

    <dt class="col-sm-2">Currency</dt>
    <dd class="col-sm-10">@Model.Currency?.Name</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>