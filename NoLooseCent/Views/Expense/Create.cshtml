@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Add Expense";
    var currencies = ViewBag.Currencies as List<NoLooseCent.Models.Currency>;
}

<div class="container-fluid stay-interview-details">
    <!-- Header -->
    <div class="header-section text-center mb-5">
        <h1 class="display-5 fw-bold text-danger">Add Expense</h1>
        <p class="lead text-muted">Capture a new outgoing transaction</p>
        <hr class="border-danger border-2 opacity-50 w-50 mx-auto">
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4">
                <div class="custom-gradient-header-expense py-3 px-4 text-white rounded-top">
                    <h2 class="h5 mb-0"><i class="fas fa-wallet me-2"></i>New Expense Entry</h2>
                </div>

                <div class="card-body px-4 py-4">
                    <form asp-action="Create" class="row g-3 needs-validation" novalidate>
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label fw-semibold">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">$</span>
                                <input asp-for="Amount" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Purpose" class="form-label fw-semibold">Purpose</label>
                            <input asp-for="Purpose" class="form-control" />
                            <span asp-validation-for="Purpose" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DateSpent" class="form-label fw-semibold">Date</label>
                            <input asp-for="DateSpent" type="date" class="form-control" />
                            <span asp-validation-for="DateSpent" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CurrencyId" class="form-label fw-semibold">Currency</label>
                            <select asp-for="CurrencyId" asp-items="@(new SelectList(currencies, "Id", "Name"))" class="form-select">
                                <option value="">-- Select Currency --</option>
                            </select>
                            <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                        </div>

                        <div class="col-12 d-flex justify-content-between pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-save me-1"></i> Save Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-gradient-header-expense {
            background: linear-gradient(to right, #ef4444, #f87171);
            font-weight: 600;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .form-label {
            font-weight: 500;
            color: #374151;
        }

        input.form-control, select.form-select {
            border-radius: 0.5rem;
        }

        .input-group-text {
            border-radius: 0.5rem 0 0 0.5rem;
        }
    </style>
}