@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
    var currencies = ViewBag.Currencies as List<NoLooseCent.Models.Currency>;
}

<div class="container-fluid stay-interview-details">
    <div class="header-section text-center mb-5">
        <h1 class="display-5 fw-bold text-success">Edit Expense Record</h1>
        <p class="lead text-muted">Update expense details below</p>
        <hr class="border-success border-2 opacity-50 w-50 mx-auto">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4">
                <div class="custom-gradient-header py-3 px-4 text-white rounded-top">
                    <h2 class="h5 mb-0"><i class="fas fa-pen me-2"></i>Edit Expense</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label text-muted">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">$</span>
                                <input asp-for="Amount" class="form-control rounded-pill" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Purpose" class="form-label text-muted">Purpose</label>
                            <input asp-for="Purpose" class="form-control rounded-pill" placeholder="E.g. Rent, Transport, Groceries..." />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateSpent" class="form-label text-muted">Date Spent</label>
                            <input asp-for="DateSpent" type="date" class="form-control rounded-pill" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrencyId" class="form-label text-muted">Currency</label>
                            <select asp-for="CurrencyId" asp-items="@(new SelectList(currencies, "Id", "Name", Model.CurrencyId))" class="form-select rounded-pill">
                                <option value="">-- Select Currency --</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="fas fa-check-circle me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-gradient-header {
            background: linear-gradient(to right, #16a34a, #4ade80);
            font-weight: 600;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .form-label {
            font-weight: 500;
        }
    </style>
}