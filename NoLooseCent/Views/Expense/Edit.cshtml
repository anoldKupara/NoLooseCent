@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
    var currencies = ViewBag.Currencies as List<NoLooseCent.Models.Currency>;
}

<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">✏️ Edit Expense</h2>

    <form asp-action="Edit" class="space-y-4">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
            <div class="relative">
                <input asp-for="Amount" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                    <span>$</span>
                </div>
            </div>
        </div>

        <div>
            <label asp-for="Purpose" class="block text-sm font-medium text-gray-700 mb-1">Purpose</label>
            <div class="relative">
                <input asp-for="Purpose" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 6h18M3 14h18M3 18h18" />
                    </svg>
                </div>
            </div>
        </div>

        <div>
            <label asp-for="DateSpent" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
            <input asp-for="DateSpent" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
        </div>

        <div>
            <label asp-for="CurrencyId" class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
            <select asp-for="CurrencyId" asp-items="@(new SelectList(currencies, "Id", "Name", Model.CurrencyId))" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="">-- Select Currency --</option>
            </select>
        </div>

        <div class="flex justify-end gap-3 pt-4">
            <a asp-action="Index" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-md shadow-sm">Cancel</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md shadow-sm">Update</button>
        </div>
    </form>
</div>