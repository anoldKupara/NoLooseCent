@model NoLooseCent.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
    var currencies = ViewBag.Currencies as List<NoLooseCent.Models.Currency>;
}

<h2>Edit Expense</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Purpose"></label>
        <input asp-for="Purpose" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateSpent"></label>
        <input asp-for="DateSpent" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="CurrencyId">Currency</label>
        <select asp-for="CurrencyId" class="form-control"
                asp-items="@(new SelectList(currencies, "Id", "Name", Model.CurrencyId))">
            <option value="">-- Select Currency --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>