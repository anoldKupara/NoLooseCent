@model NoLooseCent.Models.Currency
@{
    ViewData["Title"] = "Delete Currency";
}

<!-- Fonts & Styles -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50 px-4 py-12 sm:px-6 lg:px-8 font-inter">

    <!-- Page Header -->
    <div class="text-center mb-10">
        <h1 class="text-4xl font-extrabold text-red-600 tracking-tight mb-2">
            <i class="fas fa-exclamation-triangle text-red-500 mr-2"></i> Confirm Deletion
        </h1>
        <p class="text-gray-600 text-base">Are you sure you want to delete this currency?</p>
        <hr class="mt-4 border-red-300 w-1/2 mx-auto opacity-30" />
    </div>

    <!-- Warning Card -->
    <div class="max-w-xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden">
        <div class="bg-gradient-to-r from-red-500 to-pink-500 text-white px-6 py-3 text-lg font-semibold flex items-center">
            <i class="fas fa-coins mr-2"></i> Currency Info
        </div>

        <div class="px-8 py-6 text-gray-800 space-y-4 text-sm sm:text-base">
            <div class="flex justify-between">
                <span class="font-semibold text-gray-600">Name:</span>
                <span class="font-medium">@Model.Name</span>
            </div>
            <div class="flex justify-between">
                <span class="font-semibold text-gray-600">Code:</span>
                <span class="font-medium">@Model.Code</span>
            </div>
        </div>

        <!-- Confirmation Actions -->
        <form asp-action="Delete" class="px-8 pb-6 pt-3 flex justify-between items-center">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="inline-flex items-center px-5 py-2 border border-gray-500 text-gray-700 rounded-md hover:bg-gray-100 transition">
                <i class="fas fa-arrow-left mr-2"></i> Cancel
            </a>
            <button type="submit" class="inline-flex items-center px-5 py-2 bg-red-600 text-white font-semibold rounded-md hover:bg-red-700 transition">
                <i class="fas fa-trash-alt mr-2"></i> Yes, Delete
            </button>
        </form>
    </div>
</div>