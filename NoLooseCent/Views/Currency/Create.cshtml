@model NoLooseCent.Models.Currency
@{
    ViewData["Title"] = "Add Currency";
}

<!-- Tailwind + Icons -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50 px-4 py-12 font-inter">
    <!-- Page Header -->
    <div class="text-center mb-10">
        <h1 class="text-4xl font-extrabold text-indigo-600 tracking-tight">
            <i class="fas fa-coins mr-2 text-indigo-500"></i> Add New Currency
        </h1>
        <p class="text-gray-500 mt-2">Define your system currency with a name and code</p>
        <hr class="mt-4 border-indigo-300 w-1/2 mx-auto opacity-30" />
    </div>

    <!-- Form Card -->
    <div class="max-w-xl mx-auto bg-white rounded-2xl shadow-xl p-8 space-y-6">
        <form asp-action="Create" class="space-y-5">
            <!-- Currency Name -->
            <div>
                <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-1">Currency Name</label>
                <div class="relative">
                    <input asp-for="Name" placeholder="e.g. US Dollar" class="w-full pl-10 pr-4 py-2 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:outline-none shadow-sm" />
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center text-indigo-500">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-sm text-red-500"></span>
            </div>

            <!-- Currency Code -->
            <div>
                <label asp-for="Code" class="block text-sm font-semibold text-gray-700 mb-1">Currency Code</label>
                <div class="relative">
                    <input asp-for="Code" placeholder="e.g. USD" class="w-full pl-10 pr-4 py-2 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:outline-none shadow-sm" />
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center text-indigo-500">
                        <i class="fas fa-code"></i>
                    </div>
                </div>
                <span asp-validation-for="Code" class="text-sm text-red-500"></span>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg shadow-sm">
                    <i class="fas fa-arrow-left mr-2"></i> Cancel
                </a>
                <button type="submit" class="inline-flex items-center px-5 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md">
                    <i class="fas fa-save mr-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>