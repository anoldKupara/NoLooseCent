@model NoLooseCent.Models.Currency
@{
    ViewData["Title"] = "Add Currency";
}

<div class="max-w-xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">💱 Add New Currency</h2>

    <form asp-action="Create" class="space-y-4">
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Currency Name</label>
            <div class="relative">
                <input asp-for="Name" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c1.657 0 3-1.343 3-3S13.657 2 12 2 9 3.343 9 5s1.343 3 3 3zm0 4c-2.21 0-4 1.79-4 4v2h8v-2c0-2.21-1.79-4-4-4z" />
                    </svg>
                </div>
            </div>
            <span asp-validation-for="Name" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Code" class="block text-sm font-medium text-gray-700 mb-1">Currency Code</label>
            <div class="relative">
                <input asp-for="Code" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                    <span class="font-mono text-xs">ABC</span>
                </div>
            </div>
            <span asp-validation-for="Code" class="text-sm text-red-500"></span>
        </div>

        <div class="flex justify-end gap-3 pt-4">
            <a asp-action="Index" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-md shadow-sm">Cancel</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md shadow-sm">Save</button>
        </div>
    </form>
</div>