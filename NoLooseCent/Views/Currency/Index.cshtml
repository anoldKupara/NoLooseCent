@model IEnumerable<NoLooseCent.Models.Currency>
@{
    ViewData["Title"] = "Currency List";
}

<h2>Currency List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Currency</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var currency in Model)
        {
            <tr>
                <td>@currency.Name</td>
                <td>@currency.Code</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@currency.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@currency.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@currency.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>