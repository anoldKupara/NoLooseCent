@model NoLooseCent.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="text-center mb-4">NoLooseCent Financial Dashboard</h2>

<!-- USD Summary -->
<h4 class="mb-3">USD Summary</h4>
<div class="row text-center mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <h5>Total USD Income</h5>
                <h3>@Model.TotalUsdIncome.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger shadow">
            <div class="card-body">
                <h5>Total USD Expense</h5>
                <h3>@Model.TotalUsdExpense.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info shadow">
            <div class="card-body">
                <h5>USD Balance</h5>
                <h3>@Model.UsdBalance.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<!-- ZWL Summary -->
<h4 class="mb-3">ZWL Summary</h4>
<div class="row text-center mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <h5>Total ZWL Income</h5>
                <h3>@Model.TotalZwlIncome.ToString("N2") ZWL</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger shadow">
            <div class="card-body">
                <h5>Total ZWL Expense</h5>
                <h3>@Model.TotalZwlExpense.ToString("N2") ZWL</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info shadow">
            <div class="card-body">
                <h5>ZWL Balance</h5>
                <h3>@Model.ZwlBalance.ToString("N2") ZWL</h3>
            </div>
        </div>
    </div>
</div>

<!-- Income vs Expense Pie Chart -->
<h4 class="mt-5 mb-3">Income vs Expense Overview</h4>
<div class="row justify-content-center mb-5">
    <div class="col-md-6">
        <canvas id="incomeExpenseChart" width="400" height="200"></canvas>
    </div>
</div>

<!-- Recent Transactions Table -->
<h4>Recent Transactions</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Source / Purpose</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RecentTransactions)
        {
            <tr>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <span class="badge @(item.Type == "Income" ? "bg-success" : "bg-danger")">@item.Type</span>
                </td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.CurrencyName</td>
                <td>@item.SourceOrPurpose</td>
            </tr>
        }
    </tbody>
</table>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    window.onload = function () {
        const ctx = document.getElementById('incomeExpenseChart').getContext('2d');

        const income = parseFloat("@(Model.TotalUsdIncome + Model.TotalZwlIncome)");
        const expense = parseFloat("@(Model.TotalUsdExpense + Model.TotalZwlExpense)");

        const incomeExpenseChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Total Income', 'Total Expense'],
                datasets: [{
                    data: [income, expense],
                    backgroundColor: ['#28a745', '#dc3545'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    title: {
                        display: true,
                        text: 'Combined Income vs Expense'
                    }
                }
            }
        });
    };
</script>