@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NoLooseCent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f9;
        }

        .sidebar {
            min-height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #fff;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
            padding-top: 60px;
            transition: all 0.3s;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .nav-link {
                color: #495057;
                border-radius: 6px;
                margin: 8px 10px;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    min-width: 20px;
                    text-align: center;
                }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: #e6e6f9;
                    color: #6f42c1;
                }

                .sidebar .nav-link.collapsed span {
                    display: none;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.collapsed {
                margin-left: 80px;
            }

        .navbar {
            position: fixed;
            width: 100%;
            z-index: 1000;
            top: 0;
            left: 0;
        }

        .sidebar-toggle {
            border: none;
            background: none;
            color: #6f42c1;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i><span>Dashboard</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Income" ? "active" : "")" asp-controller="Income" asp-action="Index">
                <i class="fas fa-coins"></i><span>Income</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Expense" ? "active" : "")" asp-controller="Expense" asp-action="Index">
                <i class="fas fa-money-bill-wave"></i><span>Expenses</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                <i class="fas fa-chart-pie"></i><span>Reports</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div id="mainContent" class="content">
         <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>