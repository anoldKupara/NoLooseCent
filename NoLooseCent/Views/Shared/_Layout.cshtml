<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoLooseCent</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: #fff;
            transition: all 0.3s ease;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar h4,
            .sidebar a span {
                display: inline-block;
                transition: opacity 0.2s ease;
            }

            .sidebar.collapsed h4,
            .sidebar.collapsed a span {
                opacity: 0;
            }

            .sidebar a {
                color: #ccc;
                display: flex;
                align-items: center;
                padding: 12px 16px;
                text-decoration: none;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: #fff;
                }

        .content {
            flex: 1;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed + .content {
            margin-left: 60px;
        }

        .toggle-btn {
            position: absolute;
            top: 10px;
            left: 230px;
            z-index: 1000;
            background-color: #343a40;
            color: #fff;
            border: none;
            padding: 6px 10px;
            cursor: pointer;
            transition: left 0.3s ease;
        }

        .sidebar.collapsed + .toggle-btn {
            left: 70px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h4 class="text-center py-3">NoLooseCent</h4>
        <a asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i> <span>Dashboard</span></a>
        <a asp-controller="Income" asp-action="Index"><i class="fas fa-arrow-down me-2"></i> <span>Incomes</span></a>
        <a asp-controller="Expense" asp-action="Index"><i class="fas fa-arrow-up me-2"></i> <span>Expenses</span></a>
        <a asp-controller="Currency" asp-action="Index"><i class="fas fa-coins me-2"></i> <span>Currencies</span></a>
        <a asp-controller="Reports" asp-action="Index"><i class="fas fa-chart-pie me-2"></i> <span>Reports</span></a>
    </div>

    <!-- Toggle Button -->
    <button id="toggleSidebar" class="toggle-btn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
</body>
</html>