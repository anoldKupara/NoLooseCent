@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NoLooseCent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Framework & icon fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)   <!-- ★ New line: allows per-view <style> sections -->

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f9;
        }

        /* ───────────────────────── Sidebar ───────────────────────── */
        .sidebar {
            min-height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #fff;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
            padding-top: 60px;
            transition: all 0.3s;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .nav-link {
                color: #495057;
                border-radius: 6px;
                margin: 8px 10px;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    min-width: 20px;
                    text-align: center;
                }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: #e6e6f9;
                    color: #6f42c1;
                }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

            .sidebar.collapsed .nav-link {
                justify-content: center;
            }

        /* ───────────────────────── Content area ───────────────────────── */
        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.collapsed {
                margin-left: 80px;
            }

        /* ───────────────────────── Top navbar ───────────────────────── */
        .navbar {
            position: fixed;
            width: 100%;
            z-index: 1000;
            top: 0;
            left: 0;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .sidebar-toggle {
            border: none;
            background: none;
            color: #6f42c1;
        }

        .navbar .dropdown img {
            object-fit: cover;
            border: 2px solid #ccc;
        }

        .dropdown-menu-end {
            right: 0;
            left: auto;
        }
    </style>
</head>

<body>
    <!-- ░░ Sidebar ░░ -->
    <div id="sidebar" class="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
               asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i><span>Dashboard</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Income" ? "active" : "")"
               asp-controller="Income" asp-action="Index">
                <i class="fas fa-coins"></i><span>Income</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Expense" ? "active" : "")"
               asp-controller="Expense" asp-action="Index">
                <i class="fas fa-money-bill-wave"></i><span>Expenses</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Currency" ? "active" : "")"
               asp-controller="Currency" asp-action="Index">
                <i class="fas fa-dollar-sign"></i><span>Currency</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
               asp-controller="Reports" asp-action="Index">
                <i class="fas fa-chart-pie"></i><span>Reports</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
               asp-controller="Reports" asp-action="FinancialStatement"
               data-tooltip="Financial Statement">
                <i class="fas fa-file-invoice-dollar"></i><span>Financial Statement</span>
            </a>
        </nav>
    </div>

    <!-- ░░ Top Navbar ░░ -->
    <nav class="navbar px-4 py-2 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <button onclick="toggleSidebar()" class="btn sidebar-toggle me-3">
                <i class="fas fa-bars fa-lg"></i>
            </button>
            <span class="navbar-brand fw-bold">NoLooseCent</span>
        </div>

        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-decoration-none"
               data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/default-avatar.png" class="rounded-circle" width="36" height="36" alt="Avatar" />
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow mt-2">
                <li class="dropdown-header text-center">
                    <strong>@User.Identity?.Name</strong><br />
                    <small class="text-muted">Admin</small>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" asp-page="/Account/Manage/Index">My Profile</a></li>
                <li><a class="dropdown-item" asp-page="/Account/Manage/ChangePassword">Settings</a></li>
                <li><a class="dropdown-item" href="#">Billing</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <!-- ░░ Main content ░░ -->
    <div id="mainContent" class="content pt-5 mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ░░ Scripts ░░ -->
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content  = document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
