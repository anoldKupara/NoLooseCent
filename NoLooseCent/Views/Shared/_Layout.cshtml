@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NoLooseCent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f9;
        }

        .sidebar {
            min-height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #fff;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
            padding-top: 60px;
            transition: all 0.3s;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .nav-link {
                color: #495057;
                border-radius: 6px;
                margin: 8px 10px;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    min-width: 20px;
                    text-align: center;
                }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: #e6e6f9;
                    color: #6f42c1;
                }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.collapsed {
                margin-left: 80px;
            }

        .navbar {
            position: fixed;
            width: 100%;
            z-index: 1000;
            top: 0;
            left: 0;
        }

        .sidebar-toggle {
            border: none;
            background: none;
            color: #6f42c1;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .dropdown-menu {
            min-width: 220px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i><span>Dashboard</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Income" ? "active" : "")" asp-controller="Income" asp-action="Index">
                <i class="fas fa-coins"></i><span>Income</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Expense" ? "active" : "")" asp-controller="Expense" asp-action="Index">
                <i class="fas fa-money-bill-wave"></i><span>Expenses</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                <i class="fas fa-chart-pie"></i><span>Reports</span>
            </a>
        </nav>
    </div>

    <!-- Top Navbar with User Dropdown -->
    <nav class="navbar navbar-light bg-white shadow-sm px-4">
        <div class="d-flex justify-content-end w-100">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@(User.Identity.IsAuthenticated? Url.Content(User.FindFirst("AvatarUrl")?.Value ?? "/images/default-avatar.png") : "/images/default-avatar.png")"
                         alt="avatar" class="user-avatar me-2" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                    <li class="text-center p-2">
                        <img src="@(User.Identity.IsAuthenticated? Url.Content(User.FindFirst("AvatarUrl")?.Value ?? "/images/default-avatar.png") : "/images/default-avatar.png")"
                             width="50" class="rounded-circle mb-2" />
                        <div class="fw-bold">@ViewBag.FullName</div>
                        <small class="text-muted">Admin</small>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> My Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                    <li>
                        <a class="dropdown-item d-flex justify-content-between align-items-center" href="#">
                            <span><i class="fas fa-credit-card me-2"></i> Billing</span>
                            <span class="badge bg-danger rounded-pill">4</span>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-power-off me-2"></i> Log Out
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="mainContent" class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>