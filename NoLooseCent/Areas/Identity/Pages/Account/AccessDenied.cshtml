@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="text-center">
        <img src="~/images/unauthorized.svg" alt="Access Denied" style="max-width: 280px;" class="mb-4" />
        <h2 class="text-danger">Access Denied</h2>
        <p class="text-muted">You do not have permission to view this page or perform this action.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            <i class="fas fa-arrow-left"></i> Return to Dashboard
        </a>
    </div>
</div>