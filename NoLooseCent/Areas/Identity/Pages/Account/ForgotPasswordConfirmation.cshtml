@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Email Sent";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f5f5f9;">
    <div class="card shadow-sm p-4" style="max-width: 450px; width: 100%; border-radius: 16px;">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="NoLooseCent Logo" style="height: 45px;" />
        </div>

        <h4 class="text-center mb-2 text-success">Check Your Email 📧</h4>
        <p class="text-muted text-center mb-4">
            We've sent a password reset link to your email. Please check your inbox and follow the instructions to reset your password.
        </p>

        <div class="text-center">
            <a asp-page="./Login" class="btn btn-primary w-100">Back to Login</a>
        </div>
    </div>
</div>