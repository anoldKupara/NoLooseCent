@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 100%; max-width: 480px; border-radius: 12px;">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="Logo" style="width: 40px;" />
            <h4 class="mt-3">Resend Confirmation Email</h4>
            <p class="text-muted">Enter your email address and we'll send another confirmation link.</p>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Send Confirmation Email</button>
        </form>
        <div class="text-center mt-3">
            <a asp-page="./Login" class="text-decoration-none"><i class="fas fa-arrow-left"></i> Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}