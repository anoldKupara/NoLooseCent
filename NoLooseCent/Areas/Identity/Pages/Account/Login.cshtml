@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9f9fb;
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 40px 30px;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
    }

        .login-card h4 {
            font-weight: 600;
        }

        .login-card .form-control {
            border-radius: 8px;
        }

        .login-card button {
            background-color: #696cff;
            border: none;
        }

            .login-card button:hover {
                background-color: #5a5de1;
            }

        .login-card .text-muted {
            font-size: 0.9rem;
        }

    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 4px;
    }

    .text-link {
        color: #696cff;
        text-decoration: none;
        font-weight: 500;
    }

        .text-link:hover {
            text-decoration: underline;
        }

    .external-login-section {
        margin-top: 30px;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="Logo" width="110" />
            <h4 class="mt-3">Welcome to NoLooseCent! 👋</h4>
            <p class="text-muted">Please sign in to your account</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email or Username</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="you@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label d-flex justify-content-between">
                    <span>Password</span>
                    <a asp-page="./ForgotPassword" class="text-link">Forgot Password?</a>
                </label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <div class="d-grid mb-3">
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Sign in</button>
            </div>

            <p class="text-center text-muted">
                New on our platform?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-link">Create an account</a>
            </p>

            <p class="text-center text-muted mt-3">
                <a asp-page="./ResendEmailConfirmation" class="text-link">Resend email confirmation</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}